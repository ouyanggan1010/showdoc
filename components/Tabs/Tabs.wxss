.tabs {
  padding-top: 68rpx;
}

.tabs .tabs_title {
  position: fixed;
  top: 100rpx;
  left: 0;
  width: 100%;
  background: #fff;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
}

.tabs .tabs_title .title_item {
  padding: 15rpx 0;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-pack: center;
      -ms-flex-pack: center;
          justify-content: center;
  -webkit-box-align: center;
      -ms-flex-align: center;
          align-items: center;
  -webkit-box-flex: 1;
      -ms-flex: 1;
          flex: 1;
  border-bottom: 2rpx solid #D8D8D8;
}

.tabs .tabs_title .title_item.active {
  color: var(--themeColor);
  border-bottom-color: currentColor;
}

.tabs .tabs_title.boxShaw {
  -webkit-box-shadow: 0px 1px 3px 0px #D8D8D8;
          box-shadow: 0px 1px 3px 0px #D8D8D8;
}
