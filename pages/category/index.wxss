page {
  height: 100%;
}

.cates {
  height: 100%;
}

.cates .cates_container {
  height: calc(100vh - 100rpx);
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
}

.cates .cates_container .left_menu {
  -webkit-box-flex: 2;
      -ms-flex: 2;
          flex: 2;
  background: #fafafa;
  padding-bottom: 50rpx;
}

.cates .cates_container .left_menu .menu_item {
  height: 80rpx;
  font-size: 30rpx;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-pack: center;
      -ms-flex-pack: center;
          justify-content: center;
  -webkit-box-align: center;
      -ms-flex-align: center;
          align-items: center;
  position: relative;
}

.cates .cates_container .left_menu .menu_item .line {
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  background: var(--themeColor);
  width: 5rpx;
}

.cates .cates_container .left_menu .menu_item.active {
  color: var(--themeColor);
  background: #fff;
  font-weight: bold;
}

.cates .cates_container .right_content {
  height: 100%;
  -webkit-box-flex: 5;
      -ms-flex: 5;
          flex: 5;
}

.cates .cates_container .right_content .goods_group {
  padding-bottom: 30rpx;
  width: 100%;
}

.cates .cates_container .right_content .goods_group .goods_title {
  height: 80rpx;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-pack: center;
      -ms-flex-pack: center;
          justify-content: center;
  -webkit-box-align: center;
      -ms-flex-align: center;
          align-items: center;
  font-size: 30rpx;
}

.cates .cates_container .right_content .goods_group .goods_list {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -ms-flex-wrap: wrap;
      flex-wrap: wrap;
}

.cates .cates_container .right_content .goods_group .goods_list navigator {
  margin-top: 20rpx;
  width: 33.33%;
  text-align: center;
}

.cates .cates_container .right_content .goods_group .goods_list navigator .good_name {
  font-size: 28rpx;
}

.cates .cates_container .right_content .goods_group .goods_list navigator image {
  width: 50%;
}
